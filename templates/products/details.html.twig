{% extends "base.html.twig" %}

{% block title %}DETAILS DE
	{{ product.name }}
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>{{ product.name }}</h1>
			</div>

			<div class="col-6">
				<div id="carouselExampleIndicators" class="carousel slide">
					{% for iteration in 1.. product.images|length %}
						<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ iteration - 1}}" {{ (loop.first) ? 'class="active" aria-current="true"' : ''}} aria-label="Slide {{ iteration - 1}}"></button>
					{% endfor %}

					<div class="carousel-inner">
						{% for image in product.images %}
							<div class="carousel-item {{(loop.first ) ? 'active' : ''}}">
								{# <img
																																src="https://picsum.photos/200/300?random=2" class="d-block w-100 " alt="{{product.name}}"> #}
								{# <img src="/public/assets/uploads/email.png" class="d-block w-100" alt="..."> #}
							<img src="{{ asset('assets/uploads/') ~ image.name }}" alt="Symfony!"/> </div>
						{% endfor %}


					</div>
					<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>
					<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			</div>


			<div class="col-6">

				<p>{{ product.description }}</p>
				<p>Catégories :
					{{ product.categories.name }}</P>
				<p>Prix :
					{{ product.price /100}}
					€</p>
				{% if product.stock > 0 %}
					<a href="#" class="btn btn-success">Ajouter au panier</a>
				{% else %}
					<p class="text-danger">Temporairement en rupture</p>
				{% endif %}
			</div>

		</section>

	</main>

{% endblock %}
